<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.drake.brv.PageRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center_horizontal"
                        android:drawablePadding="2dp"
                        android:id="@+id/tv_downloaded"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:text="已下载"
                        android:textSize="17sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:drawableTopCompat="@drawable/baseline_download_24" />

                    <TextView
                        android:gravity="center_horizontal"
                        android:layout_marginStart="20dp"
                        android:drawablePadding="2dp"
                        android:id="@+id/tv_favorite"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:text="我的收藏"
                        android:textSize="17sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:drawableTopCompat="@drawable/baseline_favorite_24" />

                    <TextView
                        android:gravity="center_horizontal"
                        android:layout_marginStart="20dp"
                        android:drawablePadding="2dp"
                        android:id="@+id/tv_history"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:text="播放历史"
                        android:textSize="17sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:drawableTopCompat="@drawable/baseline_history_24" />

                </LinearLayout>

                <TextView
                    android:paddingHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="推荐歌单"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <com.google.android.material.tabs.TabLayout
                    app:tabContentStart="20dp"
                    android:id="@+id/tab_playlist_cate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:tabGravity="center"
                    app:tabIndicatorGravity="bottom"
                    app:tabMode="scrollable" />

                <androidx.recyclerview.widget.RecyclerView
                    android:paddingHorizontal="20dp"
                    android:id="@+id/recommend_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="3" />

                <TextView
                    android:paddingHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="排行榜"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <com.drake.engine.widget.NestedScrollableHost
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:paddingHorizontal="20dp"
                        android:clipToPadding="false"
                        android:id="@+id/rank_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                </com.drake.engine.widget.NestedScrollableHost>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </com.drake.brv.PageRefreshLayout>

</layout>