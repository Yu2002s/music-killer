<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.drake.engine.databinding.GlideDataBindingComponent" />

        <variable
            name="m"
            type="xyz.jdynb.music.model.PlayListModel" />

    </data>

    <com.drake.brv.PageRefreshLayout
        android:id="@+id/page"
        app:page_rv="@id/playlist_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:fitsSystemWindows="true"
                app:statusBarForeground="@android:color/transparent"
                android:id="@+id/appbar"
                android:background="@null"
                android:stateListAnimator="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:theme="@style/ThemeOverlay.Material3.DynamicColors.Dark"
                    app:title="@{m.name}"
                    android:layout_width="match_parent"
                    app:titleCollapseMode="scale"
                    app:statusBarScrim="@android:color/transparent"
                    style="?attr/collapsingToolbarLayoutMediumStyle"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:expandedTitleTextAppearance="?textAppearanceHeadlineLarge"
                    app:contentScrim="#80000000"
                    android:id="@+id/collapsing_toolbar_layout"
                    tools:title="@string/app_name"
                    app:expandedTitleMarginStart="24dp"
                    app:expandedTitleMarginBottom="28dp"
                    android:layout_height="200dp">

                    <ImageView
                        android:fitsSystemWindows="true"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.7"
                        android:scaleType="centerCrop"
                        android:foreground="#80000000"
                        img="@{m.img700}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <com.google.android.material.appbar.MaterialToolbar
                        android:id="@+id/toolbar"
                        android:elevation="0dp"
                        android:layout_width="match_parent"
                        app:layout_collapseMode="pin"
                        android:layout_height="?attr/actionBarSize" />

                </com.google.android.material.appbar.CollapsingToolbarLayout>

                <View
                    android:layout_marginTop="-14dp"
                    android:background="@drawable/bg_corner_top"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:paddingHorizontal="16dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:text="@{m.info}"
                    android:maxLines="3"
                    tools:text="这是歌曲去打卡时间大课间阿克苏几点睡啊空间打开"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        tools:text="共12首歌曲"
                        android:text="@{`共` + m.total + `首`}"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_play"
                        app:icon="@drawable/baseline_play_arrow_24"
                        android:text="播放"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_favorite"
                        android:layout_marginStart="10dp"
                        app:icon="@drawable/baseline_favorite_border_24"
                        android:text="收藏"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/playlist_rv"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </com.drake.brv.PageRefreshLayout>

</layout>