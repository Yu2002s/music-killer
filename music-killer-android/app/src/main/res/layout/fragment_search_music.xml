<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.drake.engine.databinding.DataBindingComponent" />

        <import type="xyz.jdynb.music.ui.fragment.search.SearchViewModel" />

        <variable
            name="m"
            type="xyz.jdynb.music.ui.fragment.search.SearchViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentInsetEndWithActions="10dp">

                <EditText
                    android:text="@{m.searchAction.keyword}"
                    android:inputType="text"
                    android:singleLine="true"
                    android:id="@+id/edit_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入关键字"
                    android:imeOptions="actionSearch"
                    android:maxLines="1" />

            </com.google.android.material.appbar.MaterialToolbar>

            <include
                android:id="@+id/tab"
                gone="@{m.uiState instanceof SearchViewModel.UiState.Result}"
                layout="@layout/layout_tab" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager2.widget.ViewPager2
            tools:visibility="gone"
            android:id="@+id/vp"
            gone="@{m.uiState instanceof SearchViewModel.UiState.Result}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.core.widget.NestedScrollView
            gone="@{m.uiState instanceof SearchViewModel.UiState.Nothing}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="搜索历史"
                    gone="@{m.hasHistory}"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    gone="@{m.hasHistory}"
                    android:padding="6dp"
                    android:nestedScrollingEnabled="false"
                    android:id="@+id/rv_history"
                    android:clipToPadding="false"
                    app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                    app:spanCount="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="热门搜索"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:nestedScrollingEnabled="false"
                    android:id="@+id/rv_key"
                    android:layout_weight="1"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    tools:ignore="NestedWeights" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.recyclerview.widget.RecyclerView
            tools:visibility="gone"
            gone="@{m.uiState instanceof SearchViewModel.UiState.Suggest}"
            android:id="@+id/rv_suggest"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</layout>