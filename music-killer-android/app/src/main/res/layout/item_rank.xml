<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.drake.engine.databinding.GlideDataBindingComponent" />

        <variable
            name="m"
            type="xyz.jdynb.music.model.MusicRankModel" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="120dp">

            <ImageView
                img="@{m.pic}"
                corner="@{12}"
                android:scaleType="centerCrop"
                android:layout_width="200dp"
                android:layout_height="120dp"/>

            <TextView
                android:id="@+id/tv_leader"
                android:text="@{m.leader}"
                tools:text="新歌榜"
                android:background="@drawable/bg_corner_leader"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            android:id="@+id/music_rv"
            android:nestedScrollingEnabled="false"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</layout>