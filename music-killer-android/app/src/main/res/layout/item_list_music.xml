<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.drake.engine.databinding.GlideDataBindingComponent" />
        <import type="com.drake.engine.databinding.DataBindingComponent" />
        <import type="xyz.jdynb.music.R" />

        <variable
            name="m"
            type="xyz.jdynb.music.model.MusicModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_music"
        android:background="?attr/selectableItemBackground"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            tools:src="@tools:sample/avatars"
            android:id="@+id/music_cover"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            img="@{m.showPic}"
            holder="@{@drawable/ic_holder}"
            corner="@{6}"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            selected="@{m.selected}"
            android:text="@{m.showName}"
            android:layout_marginStart="12dp"
            tools:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/tv_music_name"
            android:id="@+id/music_name"
            android:layout_width="0dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/music_cover"
            app:layout_constraintStart_toEndOf="@id/music_cover"
            app:layout_constraintBottom_toTopOf="@id/music_artist"
            app:layout_constraintEnd_toStartOf="@id/btn_favorite"
            android:layout_height="wrap_content"/>

        <TextView
            selected="@{m.selected}"
            android:text="@{m.artist}"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:id="@+id/music_artist"
            tools:text="@string/app_name"
            android:textColor="@color/tv_music_artist"
            app:layout_constraintBottom_toBottomOf="@id/music_cover"
            app:layout_constraintTop_toBottomOf="@id/music_name"
            app:layout_constraintStart_toStartOf="@id/music_name"
            app:layout_constraintEnd_toEndOf="@id/music_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageButton
            selected="@{m.favorite}"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/btn_favorite"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_add"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/btn_add"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/baseline_playlist_add_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>